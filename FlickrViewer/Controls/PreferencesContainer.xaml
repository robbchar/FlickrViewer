<UserControl x:Class="FlickrViewer.Controls.PreferencesContainer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    >

    <Grid x:Name="LayoutRoot" Background="Transparent" Height="50">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>
        
        <StackPanel x:Name="stpPreferences" Background="Black" Grid.Row="0"/>
        <Button x:Name="Close" Content="Close" Grid.Row="1" HorizontalAlignment="Left"/>
    </Grid>
</UserControl>
